package n1exercici1;
import java.util.ArrayList;

public class Venda {

	public ArrayList<Producte> productes = new ArrayList<Producte>();
	
	public double total;

	public void calcularTotal() throws VendaBuidaException {
		try {
			getMessage();
		}
		catch(Exception e) {
			System.out.println("A problem: " + e);
		}
	}
	
	private void getMessage() throws VendaBuidaException {
		if(productes.size() == 0) {
			throw new VendaBuidaException();
		}
	}
}
