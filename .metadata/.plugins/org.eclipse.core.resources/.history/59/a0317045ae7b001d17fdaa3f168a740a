package n1exercici2;

public class Cotxe {

	// Atributs
	public static final String MARCA = "Hispano-Suiza";
	public static String model;
	public final int potencia;
	
	// Constructor
	public Cotxe(String model) {
		this.potencia = 1024;
		this.model = model;
	}
	
	// Mètodes
	public void accelerar() {
		System.out.println("El cotxe està accelerant.");
	}
	
	public void frenar() {
		System.out.println("El cotxe està frenant.");
	}
	
	// Getters
	public String getMarca() {
		return MARCA;
	}
	
	public String getModel() {
		return model;
	}
	
	public String getPotencia() {
		return Integer.toString(potencia);
	}
	
	@Override
	public String toString() {
		return 	"Marca: " 
				+ getMarca() 
				+ ", Model: " + getModel()
				+ ", Potència: " + getPotencia();
	}	
}
